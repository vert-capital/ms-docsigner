                },
                "name": {
                    "type": "string",
                    "maxLength": 255,
                    "minLength": 3
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "draft",
                        "ready",
                        "processing",
                        "sent"
                    ]
                }
            }
        },
